<mvc:View xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m" controllerName="com.wipro.getdsreskin.controller.Home" displayBlock="true">
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content>
                        <HBox height="100%" width="100%">
                            <VBox alignContent="SpaceAround" fitContainer="true" justifyContent="Center" width="50%" alignItems="Center">

                                <VBox class="login-box">
                                    <Label text="Username" design="Bold"/>
                                    <Input value="" type="Text"/>
                                    <Label text="Password" design="Bold" textAlign="Left"/>
                                    <Input value="" type="Text"/>
                                    <Button class="login-button" text="Login" type="Unstyled" />
                                </VBox>
                            </VBox>
                            <VBox width="50%">

                            </VBox>

                        </HBox>

                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>